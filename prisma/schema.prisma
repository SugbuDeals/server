generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int              @id @default(autoincrement())
  email            String           @unique
  password         String
  name             String
  createdAt        DateTime         @default(now())
  role             UserRole         @default(CONSUMER)
  imageUrl         String?
  subscriptionTier SubscriptionTier @default(BASIC)

  Store           Store[]
  StoreBookmark   StoreBookmark[]
  ProductBookmark ProductBookmark[]
  notifications   Notification[]
  views           View[]
  storeReviews    StoreReview[]
  reviewReplies   ReviewReply[]
  reviewReactions ReviewReaction[]
  reportsCreated  Report[]       @relation("Reporter")
  reportsReceived Report[]        @relation("ReportedUser")
  reportsReviewed Report[]       @relation("Reviewer")
}

enum UserRole {
  CONSUMER
  RETAILER
  ADMIN
}

enum SubscriptionTier {
  BASIC
  PRO
}

enum DealType {
  PERCENTAGE_DISCOUNT
  FIXED_DISCOUNT
  BOGO
  BUNDLE
  QUANTITY_DISCOUNT
  VOUCHER
}

model Store {
  id                 Int                     @id @default(autoincrement())
  name               String
  description        String
  createdAt          DateTime                @default(now())
  verificationStatus StoreVerificationStatus @default(UNVERIFIED)
  ownerId            Int
  imageUrl           String?
  bannerUrl          String?
  isActive           Boolean                 @default(true)

  // location
  latitude   Float?
  longitude  Float?
  address    String?
  city       String?
  state      String?
  country    String?
  postalCode String?

  owner     User            @relation(fields: [ownerId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  products  Product[]
  bookmarks StoreBookmark[]
  reviews   StoreReview[]
  reports   Report[]

  @@index([latitude, longitude])
}

enum StoreVerificationStatus {
  UNVERIFIED
  VERIFIED
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Decimal
  stock       Int
  createdAt   DateTime @default(now())
  isActive    Boolean  @default(true)
  storeId     Int
  categoryId  Int?
  imageUrl    String?

  store                Store                    @relation(fields: [storeId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  category             Category?                @relation(fields: [categoryId], references: [id], onUpdate: Cascade, onDelete: SetNull)
  bookmarks            ProductBookmark[]
  promotionProducts    PromotionProduct[]
  voucherRedemptionProducts VoucherRedemptionProduct[]

  @@index([storeId, isActive]) // List active products by store
  @@index([categoryId, isActive]) // List active products by category
}

model Promotion {
  id          Int       @id @default(autoincrement())
  title       String
  dealType    DealType
  description String
  startsAt    DateTime  @default(now())
  endsAt      DateTime?
  active      Boolean   @default(true)

  // PERCENTAGE_DISCOUNT fields
  percentageOff Float? // e.g., 25.0 for 25% off

  // FIXED_DISCOUNT fields
  fixedAmountOff Float? // e.g., 10.0 for $10 off

  // BOGO fields
  buyQuantity Int? // Buy X items
  getQuantity Int? // Get Y items free

  // BUNDLE fields
  bundlePrice Float? // Fixed price for bundle

  // QUANTITY_DISCOUNT fields
  minQuantity      Int? // Minimum quantity to qualify
  quantityDiscount Float? // Discount % when min quantity met

  // VOUCHER fields
  voucherValue Float? // Fixed monetary value (e.g., $50 voucher)
  voucherQuantity Int? // Total number of vouchers available (null = unlimited)

  promotionProducts PromotionProduct[]

  @@index([active, startsAt, endsAt]) // Filter active promotions efficiently
  @@index([dealType, active]) // Filter by deal type and status
}

model PromotionProduct {
  id          Int      @id @default(autoincrement())
  promotionId Int
  productId   Int
  createdAt   DateTime @default(now())

  // BOGO specific: mark if product is "buy" or "get" item
  productRole String? @default("default") // "buy", "get", or "default"

  promotion Promotion @relation(fields: [promotionId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  product   Product   @relation(fields: [productId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@unique([promotionId, productId])
  @@index([promotionId])
  @@index([productId])
  @@index([promotionId, productId]) // Query promotions by product
  @@index([productId, promotionId]) // Query products by promotion
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
}

model StoreBookmark {
  id        Int      @id @default(autoincrement())
  userId    Int
  storeId   Int
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  store Store @relation(fields: [storeId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@unique([userId, storeId])
}

model ProductBookmark {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@unique([userId, productId])
}

model Notification {
  id        Int              @id @default(autoincrement())
  userId    Int
  type      NotificationType
  title     String
  message   String
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
  readAt    DateTime?

  // Optional references to related entities
  productId   Int?
  storeId     Int?
  promotionId Int?

  user User @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@index([userId])
  @@index([userId, read])
  @@index([createdAt])
}

enum NotificationType {
  PRODUCT_CREATED
  PRODUCT_PRICE_CHANGED
  PRODUCT_STOCK_CHANGED
  PRODUCT_STATUS_CHANGED
  PROMOTION_CREATED
  PROMOTION_STARTED
  PROMOTION_ENDING_SOON
  PROMOTION_ENDED
  STORE_VERIFIED
  STORE_CREATED
  STORE_UNDER_REVIEW
  SUBSCRIPTION_JOINED
  SUBSCRIPTION_CANCELLED
  SUBSCRIPTION_EXPIRED
  SUBSCRIPTION_RENEWED
  SUBSCRIPTION_ENDING_SOON
  SUBSCRIPTION_AVAILABLE
  CONSUMER_WELCOME
  PROMOTION_NEARBY
  GPS_REMINDER
  QUESTIONABLE_PRICING_PRODUCT
  QUESTIONABLE_PRICING_PROMOTION
}

model VoucherRedemption {
  id          Int                     @id @default(autoincrement())
  userId      Int // Consumer who is redeeming
  promotionId Int // The voucher promotion
  storeId     Int // Store where redemption happens
  productId   Int? // Optional: specific product being redeemed (deprecated - use redemptionProducts)
  status      VoucherRedemptionStatus @default(PENDING)
  createdAt   DateTime                @default(now()) // When consumer generated QR
  redeemedAt  DateTime? // When retailer confirmed redemption

  redemptionProducts VoucherRedemptionProduct[] // Products selected when redeeming

  @@unique([userId, promotionId, storeId]) // One redemption per user per voucher per store
  @@index([userId])
  @@index([promotionId])
  @@index([storeId])
  @@index([status])
}

model VoucherRedemptionProduct {
  id                   Int              @id @default(autoincrement())
  voucherRedemptionId  Int
  productId            Int
  quantity             Int              @default(1) // Quantity of this product
  createdAt            DateTime         @default(now())

  voucherRedemption VoucherRedemption @relation(fields: [voucherRedemptionId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  product            Product          @relation(fields: [productId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@unique([voucherRedemptionId, productId]) // One entry per product per redemption
  @@index([voucherRedemptionId])
  @@index([productId])
}

enum VoucherRedemptionStatus {
  PENDING // QR generated, waiting for retailer scan
  VERIFIED // Retailer scanned and verified consumer
  REDEEMED // Retailer confirmed, voucher consumed
  CANCELLED // Consumer cancelled or expired
}

enum EntityType {
  STORE
  PRODUCT
  PROMOTION
}

model View {
  id         Int        @id @default(autoincrement())
  userId     Int
  entityType EntityType
  entityId   Int
  viewedAt   DateTime   @default(now()) @updatedAt

  user User @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@unique([userId, entityType, entityId])
  @@index([userId])
  @@index([entityType, entityId])
  @@index([viewedAt])
}

model StoreReview {
  id        Int      @id @default(autoincrement())
  storeId   Int
  userId    Int
  rating    Int? // 1-5 stars (optional - consumers can comment without rating)
  comment   String // Consumer's comment/review text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store     Store            @relation(fields: [storeId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  replies   ReviewReply[]
  reactions ReviewReaction[]

  @@unique([userId, storeId]) // One review per user per store
  @@index([storeId])
  @@index([userId])
  @@index([rating])
  @@index([createdAt])
}

model ReviewReply {
  id            Int      @id @default(autoincrement())
  reviewId      Int
  userId        Int
  parentReplyId Int?
  comment       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  review       StoreReview   @relation(fields: [reviewId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  parentReply  ReviewReply?  @relation("ReplyToReply", fields: [parentReplyId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  childReplies ReviewReply[] @relation("ReplyToReply")

  @@index([reviewId])
  @@index([userId])
  @@index([parentReplyId])
  @@index([createdAt])
}

model ReviewReaction {
  id        Int      @id @default(autoincrement())
  reviewId  Int
  userId    Int
  isLike    Boolean // true for like, false for dislike
  createdAt DateTime @default(now())

  review StoreReview @relation(fields: [reviewId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  user   User        @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@unique([userId, reviewId]) // One reaction per user per review
  @@index([reviewId])
  @@index([userId])
}

enum ReportReason {
  SPAM
  HARASSMENT
  INAPPROPRIATE_CONTENT
  FAKE_REVIEW
  SCAM
  OTHER
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}

model Report {
  id              Int          @id @default(autoincrement())
  reporterId      Int          // User who created the report
  reportedUserId  Int?         // User being reported (nullable - for reporting consumers)
  reportedStoreId Int?         // Store being reported (nullable - for reporting stores)
  reason          ReportReason
  description     String?      // Optional additional details
  status          ReportStatus @default(PENDING)
  createdAt       DateTime     @default(now())
  reviewedAt      DateTime?
  reviewedById    Int?         // Admin who reviewed the report

  reporter     User  @relation("Reporter", fields: [reporterId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  reportedUser User? @relation("ReportedUser", fields: [reportedUserId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  reportedStore Store? @relation(fields: [reportedStoreId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  reviewedBy   User?  @relation("Reviewer", fields: [reviewedById], references: [id], onUpdate: Cascade, onDelete: SetNull)

  @@index([reporterId])
  @@index([reportedUserId])
  @@index([reportedStoreId])
  @@index([status])
  @@index([createdAt])
  @@index([reviewedById])
}
